<?xml version="1.0" encoding="UTF-8" ?>
<Report>
	<Title><var
			var="I18N::translate('Hanging pedigree')"	/></Title>
	<Description><var
			var="I18N::translate('Chinese hanging style genealogy')" /></Description>
	<Input name="genea_all" type="checkbox"
		   default="0"><var
			var="I18N::translate('Show genealogy all')"
	/></Input>
	<Input name="resume" type="checkbox"
		   default="1"><var
			var="I18N::translate('Show resume')"
	/></Input>
	<Input name="pid" lookup="INDI"
		   type="text"><var
			var="I18N::translate('Individual')"
	/></Input>
	<Input name="maxgen" type="select"
		   options="2=>I18N::number(2)|3=>I18N::number(3)|4=>I18N::number(4)|5=>I18N::number(5)|6=>I18N::number(6)|7=>I18N::number(7)|8=>I18N::number(8)|9=>I18N::number(9)|10=>I18N::number(10)|-1=>I18N::translate('All')"><var var="I18N::translate('Show generation levels')" /></Input>
	<Input name="relatives" type="select"
		   options="ances=>I18N::translate('Direct line ancestors')|ancesFam=>I18N::translate('Direct line ancestors and their families')|all=>I18N::translate('All')"><var var="I18N::translate('Choose relatives')"/></Input>
	<Input name="photos" type="checkbox" default="1"><var var="I18N::translate('Show photos')" /></Input>

	<Input name="date" type="checkbox"
		   default="1"><var
			var="I18N::translate('Show birth and death date')" /></Input>

	<Input name="caste" type="checkbox"
		   default="1"><var var="I18N::translate('Show caste')"/></Input>

	<Input name="occu" type="checkbox"
		   default="1"><var var="I18N::translate('Show occupations')" /></Input>

	<Input name="resi" type="checkbox"
		   default="1"><var var="I18N::translate('Show residence')" /></Input>

<!--	<Input name="spou_date" type="checkbox"-->
<!--		   default="1"><var-->
<!--			var="I18N::translate('Show spouse birth and death date')" /></Input>-->

	<Input name="header" lookup=""
		   type="text"><var
			var="I18N::translate('Custom header')"
	/></Input>

	<Input name="margin" lookup=""
		   type="text"><var
			var="I18N::translate('Custom margin')" /></Input>

	<Input name="pageSize" type="select" options="A4=>I18N::translateContext('paper size','A4')|A3=>I18N::translateContext('paper size', 'A3')"><var var="I18N::translate('Page size')" /></Input>

	<Input name="colors" type="checkbox" default="1"><var var="I18N::translate('Use colors')"/></Input>

    <Style name="text" size="10"/>
	<Doc>
		<Body>
		</Body>
	</Doc>
</Report>
